# Nginx Dockerfile for reverse proxy

FROM nginx:alpine

# Add curl for independent healthcheck
RUN apk add --no-cache curl

# Copy our config
## copy custom nginx config into container
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Independent healthcheck (doesn't depend on backend being up)
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
  CMD curl -f http://localhost/nginx_health || exit 1

LABEL maintainer="student@prod.example.com"